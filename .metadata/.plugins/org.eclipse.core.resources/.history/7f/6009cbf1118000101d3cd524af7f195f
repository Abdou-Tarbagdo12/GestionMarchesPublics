package model;

import java.time.LocalDate;

public class MarchésPublics {
	public enum Statut { Ouvert,En_Evalution, Attribue, Cloture }
	
	private String titre;
	private String description;
	private double budget;
	private LocalDate dateDebut;
	private LocalDate dateFin;
	private Statut statut;
	
	public MarchésPublics() {}
	
	public MarchésPublics(String titre,String description,double budget,LocalDate dateDebut,LocalDate dateFin,Statut statut) {
		                                                                                                                      this.titre = titre;
		                                                                                                                      this.description =	description;
		                                                                                                                      this.budget = budget;
		                                                                                                                      this.dateDebut = dateDebut;
		                                                                                                                      this.dateFin = dateFin;
		                                                                                                                      this.statut = statut;
	}
	
	public String getTitre() { return titre; }
	public void setTitre(String titre)
	{ this.titre = titre;  }
	
	public String getDescription()
	{ return description; }
	public void setDescription(String description) { this.description = description; }
	
	public double getBudget()
	{ return budget; }
	public void setBudget(double budget)
	{this.budget = budget; }
	
	public LocalDate getDateDebut()
	{ return dateDebut; }
	public void setDateDebut(LocalDate dateDebut) { this.dateDebut =dateDebut; }
	
	public LocalDate getdateFin()
	{ return dateFin; }
	public void setDatefin(LocalDate dateFin) { this.dateFin =dateFin; }
	
	public Statut getstatut() { return statut; } 
	public void setstatut(Statut satatut) 
	{ this.statut =statut; }
	
	@Override
	public String toString() {
		return "MarchésPublic{" +
				"titre =' " + titre + '/' 
	+
				", description=' " + description + '/' +
				", budget=" + budget + 
				", dateDebut=" + dateDebut + 
				", dateFin=" + dateFin + 
				",statut=" + statut + 
	'}';
				
	}
}
	
	
	
	
	
	
	
	
	
	
	



